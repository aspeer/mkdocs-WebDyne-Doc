<html>
<head><title>Hello World</title></head>
<body>

<!-- The "Hello World" text will be rendered multiple times -->

<perl method="hello">
<p>
Hello World 
</perl>

</body>
</html>

__PERL__

sub hello {
	
	#  Note use of $self->print()
	#
	my $self=shift();
	for (0..3) { $self->print($self->render()) };
	return \undef;
}
